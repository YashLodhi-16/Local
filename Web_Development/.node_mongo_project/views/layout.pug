                    li.list-none.mx-2.li.effect #[a.ruby.text-none(href='about.html') About]
                    li.list-none.mx-2.li.effect #[a.ruby.text-none(href='services.html') Services]
                    li.list-none.mx-2.li.effect #[a.ruby.text-none(href='classInfo.html') Class Info]
                    li.list-none.mx-2.li.effect #[a.ruby.text-none(href='contact') Contact Us]
